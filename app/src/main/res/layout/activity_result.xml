<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/gradient_4"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <TextView
            android:id="@+id/result_highScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score:"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginBottom="7dp"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Questions:"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:padding="10dp"
            android:textSize="30sp"  />

        <TextView
            android:id="@+id/correctTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct Questions:"
            android:textAlignment="textStart"
            android:layout_marginBottom="7dp"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/wrongTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrong Questions:"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:layout_marginBottom="7dp"
            android:padding="10dp"
            android:textSize="30sp"  />

        
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/result_playAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_6"
                android:layout_weight="1"
                android:text="Play Again"
                android:textColor="#000"
                android:textSize="22sp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/result_mainMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/gradient_6"
                android:layout_weight="1"
                android:text="Main Menu"
                android:textColor="#000"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAllCaps="false"/>


        </LinearLayout>




    </LinearLayout>





</LinearLayout>