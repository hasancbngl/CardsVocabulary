<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginStart="@dimen/dp20"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/guessScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp40"
            android:text="Score:"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="@dimen/sp22" />
        <TextView
            android:id="@+id/quesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp50"
            android:layout_marginLeft="@dimen/dp50"
            android:layout_marginTop="@dimen/dp40"
            android:text="Question:"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="@dimen/sp22" />

        <TextView
            android:id="@+id/guessTimerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp25"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginTop="@dimen/dp40"
            android:text="60s:"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="@dimen/sp22" />


    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginHorizontal="@dimen/dp50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/text_background2">

        <TextView
            android:id="@+id/textQuestion"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp20"
            android:text="Guess The Words in English Language"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#524EBA"
            android:textSize="@dimen/sp22" />


    </LinearLayout>

    <EditText
        android:id="@+id/guessTheWordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dp80"
        android:layout_marginTop="@dimen/dp40"
        android:background="@drawable/text_background"
        android:clickable="false"
        android:textAllCaps="false"
        android:focusable="false"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:textColor="#524EBA"
        android:textSize="@dimen/sp30" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/parentLinearLayout"
            android:layout_marginHorizontal="@dimen/dp15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

            <LinearLayout
                android:id="@+id/parentLinearLayout2"
                android:layout_marginHorizontal="@dimen/dp15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>


        <Button
            android:id="@+id/next_Button"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp100"
            android:layout_marginTop="@dimen/dp60"
            android:gravity="center"
            android:text="next"
            android:textSize="@dimen/sp20"
            android:textStyle="bold"
            android:visibility="invisible" />




    </LinearLayout>






</LinearLayout>